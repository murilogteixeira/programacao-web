package com.murilo.web;

public class Calculadora {
	
	Calculadora(Integer num1, Integer num2, String operador) {
		
	}
		
	Integer calcular(Integer num1, Integer num2, String operador) {
		switch (operador) {
		case "+":
			return(num1 + num2);

		case "-":
			return(num1 - num2);

		case "*":
			return(num1 * num2);

		case "/":
			return(num1 / num2);

		default:
			return(null);
		}
	}
	
	Double calcular(Double num1, Double num2, String operador) {
		switch (operador) {
		case "+":
			return(num1 + num2);

		case "-":
			return(num1 - num2);

		case "*":
			return(num1 * num2);

		case "/":
			return(num1 / num2);

		default:
			return(null);
		}
	}
}
